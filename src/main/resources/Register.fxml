<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.event.ActionEvent?>
<?import javafx.fxml.FXMLLoader?>

<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController" alignment="CENTER" spacing="20.0">
    <StackPane>
        <Rectangle width="800.0" height="600.0">
            <fill>
                <LinearGradient endX="0" endY="1">
                    <stops>
                        <Stop color="#c02029" offset="0.0" />
                        <Stop color="darkred" offset="1.0" />
                    </stops>
                </LinearGradient>
            </fill>
        </Rectangle>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="Cinemabuddy!" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" />

            <HBox alignment="CENTER" spacing="10.0">
                        onAction="#RegisterButtonClicked" />
                <Button text="Register" style="-fx-background-color: #000000; -fx-text-fill: #ffffff; -fx-font-size: 18px; -fx-padding: 10px 20px; -fx-cursor: hand;"
                onAction="RegisterButtonClicked"/>
            </HBox>

            <VBox fx:id="registerVBox" visible="false" alignment="CENTER" spacing="10.0">
                <Label text="REGISTER" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" />

            </VBox>
        </VBox>
    </StackPane>
</VBox>
